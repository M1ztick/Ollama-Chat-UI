{
  "compilerOptions": {
    // Modern JS features and target environments
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    // JS Interop
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Type Checking
    "strict": true,
    "skipLibCheck": true, // For faster builds; set to false for stricter type safety
    // Module system
    "module": "ESNext",
    "moduleResolution": "node",
    // JSX/React support
    "jsx": "react-jsx",
    // Aliasing for cleaner imports
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // Other Options
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true // Don't output .js files; useful for type checking only
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}